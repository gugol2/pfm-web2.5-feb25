{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "lib",
    "paths": {
      "@types/*": [
        "lib/types/*"
      ]
    }
  },
  "include": [
    "script",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ],
}